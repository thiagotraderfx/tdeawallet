// Archivo: packages/faucet/tsconfig.json

{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // ... otras opciones
    "composite": false, // Cambiar de true a false o eliminar
    // ...
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@/*": ["./src/*"] // Cambia esto si apunta a una ruta superior (../../src/*), para que apunte solo al src local
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "pages/**/*.ts",
    "pages/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [
    // Si tienes esta referencia, déjala, pero el composite: false debería manejar el problema de tipado interno.
    { "path": "../algorand-utils" }
  ]
}
