{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": false,
    // CORRECCIÓN CLAVE: Volver a 'bundler' para la flexibilidad con extensiones de archivo.
    "moduleResolution": "bundler", 
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@/*": ["./src/*"],
      "@tdea/*": ["../../src/*"],
      // Hack final para Genkit: Apuntamos al nodo de Genkit en la raíz del monorepo
      "genkit/*": ["../../node_modules/genkit/*"]
    }
  },  
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "pages/**/*.ts",
    "pages/**/*.tsx",
    "../../src/ai/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../algorand-utils" }
  ]
}
