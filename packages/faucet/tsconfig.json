{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": false,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@/*": ["./src/*"],
      "@tdea/*": ["../../src/*"],
      "genkit/flow": ["../../node_modules/genkit/flow"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "pages/**/*.ts",
    "pages/**/*.tsx",
    "../../src/ai/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../algorand-utils" }
  ]
}
