{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": false,
    "moduleResolution": "bundler", 
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@/*": ["./src/*"],
      "@tdea/*": ["../../src/*"]
      // El alias "genkit/flow" fue movido al tsconfig.base.json      
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "pages/**/*.ts",
    "pages/**/*.tsx"
    // ELIMINADA: "../../src/ai/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../algorand-utils" }
  ]
}
