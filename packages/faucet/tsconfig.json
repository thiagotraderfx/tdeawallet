// Archivo: packages/faucet/tsconfig.json

{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    // "rootDir": "./src",  <-- LÍNEA ELIMINADA para resolver el conflicto de rutas
    "composite": true,
    "paths": {
      "@/*": ["../../src/*"]
    },
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,            // Mantener false para evitar fallos de librerías
    "noImplicitAny": false,     // Mantener false
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "pages/**/*.ts", "pages/**/*.tsx"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../algorand-utils" }
  ]
}
