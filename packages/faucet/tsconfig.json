{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": false,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      // Alias para el código fuente compartido (existente)
      "@/*": ["../../src/*"],
      
      // SOLUCIÓN FINAL: Forzar la resolución de tipos de Genkit
      // Esto asegura que el compilador encuentre 'genkit/flow' en los node_modules locales.
      "genkit": ["./node_modules/genkit"],
      "genkit/*": ["./node_modules/genkit/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "pages/**/*.ts",
    "pages/**/*.tsx",
    "../../src/ai/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../algorand-utils" }
  ]
}
